<Window x:Class="SimpleWPFapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:SimpleWPFapp.View"
        xmlns:controls2="clr-namespace:SimpleWPFapp.View"
        xmlns:link="clr-namespace:SimpleWPFapp.View"
        mc:Ignorable="d"
        Title="Simple Drawing " Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="lblTitle" Content="The current time is:" FontSize="70" HorizontalContentAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial Black"/>
        <Label Content="{Binding CurrentTime}" Grid.Row="1" FontSize="75" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
         
       
    </Grid>
</Window>
